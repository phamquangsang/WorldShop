<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.RequestDetail">
        <item name="android:windowEnterAnimation">@transition/request_detail_enter</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="ItemPrice">
        <item name="android:textSize">50sp</item>
    </style>

    <style name="MyToolbarStyle" parent="ThemeOverlay.AppCompat.ActionBar">
        <!-- Used to for the title of the Toolbar -->
        <item name="android:textColorPrimary">#000</item>
        <!-- Used to for the title of the Toolbar when parent is Theme.AppCompat.Light -->
        <item name="android:textColorPrimaryInverse">#000</item>
        <!-- Used to color the text of the action menu icons -->
        <item name="android:textColorSecondary">#000</item>
        <!-- Used to color the overflow menu icon -->
        <item name="actionMenuTextColor">#000</item>
        <!-- Color of the Toolbar -->
        <item name="android:background">#fff</item>
    </style>


    <style name="MyAppbarStyle" parent="ThemeOverlay.AppCompat.ActionBar">
        <!-- Used to for the title of the Toolbar -->
        <item name="android:textColorPrimary">#000</item>
        <!-- Used to for the title of the Toolbar when parent is Theme.AppCompat.Light -->
        <item name="android:textColorPrimaryInverse">#000</item>
        <!-- Used to color the text of the action menu icons -->
        <item name="android:textColorSecondary">#000</item>
        <!-- Used to color the overflow menu icon -->
        <item name="actionMenuTextColor">#000</item>
    </style>

    <style name="AppTheme.MessageBar" parent="AppTheme" />
</resources>
